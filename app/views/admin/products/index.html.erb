<div class="pull-right">
   <%= link_to("Add a product", new_admin_product_path, :class => "btn btn-default" ) %>
</div>
<table class="table table-bordered">
<thead>
  <tr>
    <td>品名</td>
    <td>描述</td>
    <td>库存</td>
    <td>价格</td>
    <td>选项</td>
    <td>创建日期</td>
  </tr>
</thead>
  <% @products.each do |product| %>
<tbody>
  <tr>
    <td>
      <%= link_to(product.title, admin_product_path(product)) %>
    </td>
    <td>
      <%= product.description %>
    </td>
    <td>
      <%= product.quantity %>
    </td>
    <td>
      <%= product.price %>
    </td>
    <td>
      <%= link_to("edit", edit_admin_product_path(product)) %> |
      <%= link_to("delete", admin_product_path(product), method: :delete, date: {comfirm: "Are you sure?"} ) %>
    </td>
    <td>
      <%= product.created_at %>
    </td>
  </tr>
</tbody>
  <% end %>
</table>
